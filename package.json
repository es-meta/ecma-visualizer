    "jotai-tanstack-query": "^0.9.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.509.0",
    "p-queue": "^8.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-resizable-panels": "^3.0.1",
